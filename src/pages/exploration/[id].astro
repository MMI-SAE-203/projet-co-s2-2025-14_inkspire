---
import Layout_LP from "../../layouts/Layout_LP.astro";
import ImgHeroAccueilLP from "../../assets/img/Hero-accueil.webp"
import { getTattoosByTheme, getThemeById } from "../../../backend/backend.mjs";

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/');
}

let theme;
let tattoos = [];

try {
  theme = await getThemeById(id);
  tattoos = await getTattoosByTheme(id);
} catch (error) {
  console.error('Error loading theme or tattoos:', error);
  return Astro.redirect('/');
}
---

<Layout_LP 
  titre_page={`Tatouages - ${theme.nom}`}
  img_hero={ImgHeroAccueilLP}
>
  <section class="bg-black text-white py-12 px-4">
    <!-- Header avec info du th√®me -->
    <div class="max-w-6xl mx-auto text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-extrabold mb-4">
        Tatouages <span class="text-blue-400">{theme.nom}</span>
      </h1>
      
      {theme.description && (
        <p class="text-gray-400 max-w-2xl mx-auto mb-6 text-lg">
          {theme.description}
        </p>
      )}
      
      <div class="flex items-center justify-center gap-4 mb-8">
        <a 
          href="/" 
          class="inline-flex items-center px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors"
        >
          ‚Üê Retour aux th√®mes
        </a>
        <span class="text-gray-400">
          {tattoos.length} tatouage{tattoos.length > 1 ? 's' : ''} trouv√©{tattoos.length > 1 ? 's' : ''}
        </span>
      </div>
    </div>

    <!-- Grille des tatouages -->
    {tattoos.length > 0 ? (
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {tattoos.map((tattoo) => (
            <a href={`/tatouages/${tattoo.id}`} class="block">
              <div class="bg-gray-800 rounded-xl overflow-hidden hover:scale-105 transition-transform cursor-pointer">
                <img 
                  src={tattoo.img}
                  alt={tattoo.nom || 'Tatouage'}
                  class="w-full h-48 object-cover"
                />
                <div class="p-4">
                  {tattoo.nom && (
                    <h3 class="text-white font-semibold mb-2">{tattoo.nom}</h3>
                  )}
                  {tattoo.description && (
                    <p class="text-gray-400 text-sm line-clamp-2">{tattoo.description}</p>
                  )}
                  {tattoo.prix && (
                    <p class="text-blue-400 font-bold mt-2">{tattoo.prix}‚Ç¨</p>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    ) : (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üé®</div>
        <h3 class="text-2xl font-bold mb-2">Aucun tatouage trouv√©</h3>
        <p class="text-gray-400 mb-6">
          Il n'y a pas encore de tatouages pour ce th√®me.
        </p>
        <a 
          href="/" 
          class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors"
        >
          Explorer d'autres th√®mes
        </a>
      </div>
    )}
  </section>

  <!-- Section CTA -->
  <section class="bg-gray-900 py-12 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Vous avez trouv√© votre style ?
      </h2>
      <p class="text-gray-400 mb-8">
        Utilisez notre IA pour cr√©er le tatouage parfait dans ce style !
      </p>
      <button class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold transition-colors">
        Cr√©er mon tatouage IA
      </button>
    </div>
  </section>
</Layout_LP>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>