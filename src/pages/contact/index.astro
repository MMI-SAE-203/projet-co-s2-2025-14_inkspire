---
import Layout from "../../layouts/Layout.astro";
import HeroContact from "../../assets/img/Hero-contact.webp";
---

<Layout titre_page="Contactez-nous" img_hero={HeroContact}>
  <!-- Intro -->
  <section class="text-center px-6 py-12 max-w-xl mx-auto">
    <p class="text-gray-400 text-sm mb-6">
      Une question ? Un problème technique ? Une suggestion ?
    </p>

    <h2 class="text-xl font-bold mb-4">Informations de contact</h2>
    <div class="text-sm space-y-2">
      <p>📧 <span class="text-gray-300">projetco@inkspire.com</span></p>
      <p>📍 IUT de Montbéliard, 4 place Tharradin, 25211 Montbéliard Cedex</p>
    </div>
  </section>

  <!-- Formulaire -->
  <section class="max-w-xl mx-auto px-6">
    <form class="bg-gray-900 rounded-2xl p-6 space-y-4 shadow-lg">
      <h2 class="text-lg font-semibold text-center mb-4">Contactez-nous</h2>

      <input
        type="text"
        placeholder="Nom"
        class="w-full px-4 py-2 rounded bg-gray-800 text-white placeholder-gray-400 focus:outline-none"
      />
      <input
        type="text"
        placeholder="Prénom"
        class="w-full px-4 py-2 rounded bg-gray-800 text-white placeholder-gray-400 focus:outline-none"
      />
      <input
        type="email"
        placeholder="Adresse mail"
        class="w-full px-4 py-2 rounded bg-gray-800 text-white placeholder-gray-400 focus:outline-none"
      />
      <textarea
        rows="4"
        placeholder="Votre message..."
        class="w-full px-4 py-2 rounded bg-gray-800 text-white placeholder-gray-400 focus:outline-none resize-none"
      ></textarea>

      <button
        type="submit"
        class="w-full bg-white text-black font-semibold py-2 rounded hover:bg-gray-200 transition"
      >
        Envoyer
      </button>
    </form>
  </section>
</Layout>
