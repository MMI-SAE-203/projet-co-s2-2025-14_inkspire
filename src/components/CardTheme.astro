---
const { ...theme } = Astro.props;
---

<a href={`/exploration/${theme.id}`} class="block">
  <div class="bg-gray-700 rounded-xl p-4 w-36 text-center hover:scale-105 transition-transform cursor-pointer">
    <img 
      src={theme.img}
      alt={theme.nom}
      class="w-full h-auto mb-2 object-contain bg-white p-2 rounded"
    />
    <p class="text-white text-sm">{theme.nom}</p>
  </div>
</a>
