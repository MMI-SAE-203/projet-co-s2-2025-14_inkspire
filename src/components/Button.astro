---
export interface Props {
  variant?: "plain" | "stroke";
  text?: string;
  url?: string;
}

const { text, url, variant } = Astro.props;

const variantClass = {
  stroke: "border-neutral-600",
  plain: "border-neutral-600 bg-neutral-600",
};
---

<a
  href={url}
  class={`flex items-center justify-center text-white font-montserrat_alt text-sm lg:text-2xl font-bold w-60 lg:w-100 leading-[1.6] p-6 gap-2.5 border-2 rounded-xl
    transition-all duration-300 ease-in-out transform
    hover:scale-105 active:scale-95
    ${variantClass[variant]}`}
>
  {text}
</a>
